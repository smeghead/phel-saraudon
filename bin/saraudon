#!/usr/bin/env php
<?php declare(strict_types=1);

namespace Smeghead\Saraudon;

use Phel\Phel;

$projectRootDir = __DIR__ . '/../';

foreach (
    [
        __DIR__ . '/../../../autoload.php',
        __DIR__ . '/../vendor/autoload.php'
    ] as $file
) {
    if (file_exists($file)) {
        require $file;
        break;
    }
}

Phel::run($projectRootDir, 'saraudon\\main');
